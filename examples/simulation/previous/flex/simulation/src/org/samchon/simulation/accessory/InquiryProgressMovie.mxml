<?xml version="1.0" encoding="utf-8"?>
<ui:BorderContainerWindow xmlns:fx="http://ns.adobe.com/mxml/2009"
						  xmlns:s="library://ns.adobe.com/flex/spark"
						  xmlns:mx="library://ns.adobe.com/flex/mx"
						  xmlns:ui="org.samchon.ui.*"
						  
						  width="580" height="140" creationComplete="creationCompleted(event)">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			[Bindable]protected var bigText:String;
			[Bindable]protected var smallText:String;
			
			protected function creationCompleted(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				this.removeEventListener(FlexEvent.CREATION_COMPLETE, creationCompleted);
				
				closeWhenReleaseOutside = false;
				this.setComment("Retrieving Corporate ...", "Now retrieving corporations and their details.");
			}
			public function setProgress(numerator:Number, denominator:Number):void
			{
				progressBar.indeterminate = false;
				progressBar.mode = "manual";
				
				progressBar.setProgress(numerator, denominator);
			}
			public function setComment(title:String, comment:String):void
			{
				bigText = title;
				smallText = "	Please wait for a second.\n" + "	" + comment;
			}
			
		]]>
	</fx:Script>
	
	<s:HGroup horizontalCenter="0" verticalCenter="0">
		<s:Image source="assets/images/icon.png"/>
		<s:VGroup width="100%" height="100%" 
				  fontFamily="Courier New" fontSize="13" paddingLeft="15"
				  paddingRight="15" verticalAlign="middle">
			<s:Label text="{bigText}" 
					 fontSize="20" fontWeight="bold"/>
			<s:Spacer height="15"/>
			
			<s:Label text="{smallText}" />
			<!--
			<s:Label text="    Please wait for a second."/>
			<s:Label text="    Now retrieving corporations and their details."/>
			-->
			<s:Spacer height="5"/>
			<mx:ProgressBar id="progressBar" width="100%" 
							fontSize="11" fontWeight="normal"
							indeterminate="true"
							labelPlacement="right" mode="event" />
		</s:VGroup>
	</s:HGroup>
</ui:BorderContainerWindow>
